<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.barberapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.BookXApp"
        android:allowBackup="true"
        android:icon="@drawable/moe"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moe"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarberApp">


        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />

            <activity android:name=".splash"
                android:theme="@style/AppTheme.DayNight"
                android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>




        </activity>

        // Telling the app to go to the Login activity and then the MainActivity.
        <activity android:name=".auth.Login"></activity>
        <activity android:name=".MainActivity"></activity>


    </application>

</manifest>